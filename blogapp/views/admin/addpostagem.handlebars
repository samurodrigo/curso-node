{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h1>Nova Postagem</h1>
<div class="card">
    <div class="card-body">
        <form action="/admin/postagens/nova" method="POST">
            <label for="titulo">Título:</label>
            <input type="text" id="titulo" name="titulo" placeholder="Título da postagem" class="form-control">
            <label for="slug">Slug:</label>
            <input type="text" id="slug" name="slug" placeholder="Slug da postagem" class="form-control">
            <label for="descricao">Descrição:</label>
            <input type="text" id="descricao" name="descricao" placeholder="Descrição da postagem" class="form-control">
            <label for="conteudo">Conteudo:</label>
            <textarea name="conteudo" id="conteudo" class="form-control"></textarea>
            <label for="descricao">Categoria:</label>
            <select name="categoria" id="categoria" class="form-control">
                {{#each categorias}}
                    <option value="{{_id}}">{{name}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria cadastrada</option>
                {{/each}}
            </select>
            <br>
            <button type="submit" class="btn btn-success">Criar Categoria</button>
        </form>
    </div>
</div>